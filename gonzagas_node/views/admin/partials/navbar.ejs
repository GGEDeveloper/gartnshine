<header class="navbar">
  <div class="navbar-container">
    <!-- Mobile menu button -->
    <button class="mobile-menu-button" data-sidebar-toggle>
      <i class="fas fa-bars"></i>
      <span class="sr-only">Abrir menu</span>
    </button>
    
    <!-- Search bar -->
    <div class="search-bar">
      <i class="fas fa-search search-icon"></i>
      <input 
        type="text" 
        class="search-input" 
        placeholder="Pesquisar..."
        id="globalSearch"
      >
    </div>
    
    <div class="navbar-actions">
      <!-- Notifications -->
      <div class="dropdown" x-data="{ open: false }">
        <button 
          class="navbar-icon-button" 
          @click="open = !open"
          @click.away="open = false"
          aria-label="Notificações"
        >
          <i class="far fa-bell"></i>
          <span class="badge">3</span>
        </button>
        
        <div class="dropdown-menu" x-show="open" @click.away="open = false">
          <div class="dropdown-header">
            <h3>Notificações</h3>
            <button class="text-xs text-primary">Marcar todas como lidas</button>
          </div>
          
          <div class="dropdown-content">
            <a href="#" class="dropdown-item">
              <div class="w-8 h-8 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mr-3">
                <i class="fas fa-shopping-cart"></i>
              </div>
              <div>
                <p class="font-medium">Novo pedido recebido</p>
                <p class="text-xs text-muted">Há 5 minutos</p>
              </div>
            </a>
            
            <a href="#" class="dropdown-item">
              <div class="w-8 h-8 bg-yellow-100 text-yellow-600 rounded-full flex items-center justify-center mr-3">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <div>
                <p class="font-medium">Produto com estoque baixo</p>
                <p class="text-xs text-muted">Há 1 hora</p>
              </div>
            </a>
            
            <a href="#" class="dropdown-item">
              <div class="w-8 h-8 bg-green-100 text-green-600 rounded-full flex items-center justify-center mr-3">
                <i class="fas fa-user-plus"></i>
              </div>
              <div>
                <p class="font-medium">Novo cliente cadastrado</p>
                <p class="text-xs text-muted">Hoje, 10:30</p>
              </div>
            </a>
          </div>
          
          <div class="dropdown-footer">
            <a href="/admin/notificacoes" class="text-sm font-medium text-primary">Ver todas as notificações</a>
          </div>
        </div>
      </div>
      
      <!-- Messages -->
      <div class="dropdown" x-data="{ open: false }">
        <button 
          class="navbar-icon-button" 
          @click="open = !open"
          @click.away="open = false"
          aria-label="Mensagens"
        >
          <i class="far fa-envelope"></i>
          <span class="badge">2</span>
        </button>
        
        <div class="dropdown-menu" x-show="open" @click.away="open = false">
          <div class="dropdown-header">
            <h3>Mensagens</h3>
            <button class="text-xs text-primary">Marcar todas como lidas</button>
          </div>
          
          <div class="dropdown-content">
            <a href="#" class="dropdown-item">
              <div class="w-8 h-8 bg-purple-100 text-purple-600 rounded-full flex items-center justify-center mr-3">
                <i class="fas fa-user"></i>
              </div>
              <div>
                <p class="font-medium">João Silva</p>
                <p class="text-sm text-muted truncate">Gostaria de informações sobre o pedido #12345</p>
                <p class="text-xs text-muted">Há 30 minutos</p>
              </div>
            </a>
            
            <a href="#" class="dropdown-item">
              <div class="w-8 h-8 bg-pink-100 text-pink-600 rounded-full flex items-center justify-center mr-3">
                <i class="fas fa-user"></i>
              </div>
              <div>
                <p class="font-medium">Maria Santos</p>
                <p class="text-sm text-muted truncate">Produto com defeito, preciso de troca</p>
                <p class="text-xs text-muted">Ontem, 15:45</p>
              </div>
            </a>
          </div>
          
          <div class="dropdown-footer">
            <a href="/admin/mensagens" class="text-sm font-medium text-primary">Ver todas as mensagens</a>
          </div>
        </div>
      </div>
      
      <!-- User Menu -->
      <div class="dropdown" x-data="{ open: false }">
        <button 
          class="user-menu-button" 
          @click="open = !open"
          @click.away="open = false"
          aria-label="Menu do usuário"
        >
          <div class="user-avatar">
            <% if (user && user.avatar) { %>
              <img src="<%= user.avatar %>" alt="<%= user.name %>">
            <% } else { %>
              <i class="fas fa-user"></i>
            <% } %>
          </div>
          <div class="user-info">
            <span class="user-name"><%= user ? user.name : 'Usuário' %></span>
            <span class="user-role">Administrador</span>
          </div>
          <i class="fas fa-chevron-down"></i>
        </button>
        
        <div class="dropdown-menu dropdown-menu-right" x-show="open" @click.away="open = false">
          <div class="px-4 py-3">
            <p class="text-sm font-medium text-gray-900"><%= user ? user.name : 'Usuário' %></p>
            <p class="text-sm text-gray-500 truncate"><%= user ? user.email : 'usuario@exemplo.com' %></p>
          </div>
          <div class="dropdown-divider"></div>
          <a href="/admin/perfil" class="dropdown-item">
            <i class="far fa-user mr-2"></i>
            Meu Perfil
          </a>
          <a href="/admin/configuracoes" class="dropdown-item">
            <i class="fas fa-cog mr-2"></i>
            Configurações
          </a>
          <div class="dropdown-divider"></div>
          <form action="/admin/logout" method="POST">
            <button type="submit" class="dropdown-item text-red-600">
              <i class="fas fa-sign-out-alt mr-2"></i>
              Sair
            </button>
          </form>
        </div>
      </div>
      
      <!-- Theme Toggle -->
      <button class="theme-toggle" id="themeToggle" aria-label="Alternar tema">
        <i class="fas fa-moon"></i>
        <i class="fas fa-sun hidden"></i>
      </button>
    </div>
  </div>
</header>
