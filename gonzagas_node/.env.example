# ========================
# Configurações do Banco de Dados
# ========================
DB_HOST=localhost
DB_PORT=3306
DB_USER=gonzagas_user
DB_PASSWORD=senha_segura
DB_NAME=gonzagas_db
DB_ROOT_USER=root
DB_ROOT_PASSWORD=senha_do_root

# ========================
# Configurações do Servidor
# ========================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
TRUST_PROXY=loopback
ENABLE_HTTPS=false
HTTPS_KEY_PATH=/path/to/ssl/key.pem
HTTPS_CERT_PATH=/path/to/ssl/cert.pem

# ========================
# Autenticação e Sessão
# ========================
JWT_SECRET=seu_segredo_jwt_aqui
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
SESSION_SECRET=seu_segredo_de_sessao_aqui
COOKIE_DOMAIN=localhost

# ========================
# Configurações de E-mail
# ========================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app
EMAIL_FROM="Gonzaga's Art & Shine <noreply@gonzagas.com>"
EMAIL_REPLY_TO=contato@gonzagas.com

# ========================
# Configurações de Armazenamento
# ========================
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=sua_chave_aws
AWS_SECRET_ACCESS_KEY=sua_chave_secreta_aws
AWS_REGION=us-east-1
AWS_S3_BUCKET=seu-bucket

# ========================
# Configurações de Cache
# ========================
CACHE_PROVIDER=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_DB=1

# ========================
# Configurações de Segurança
# ========================
RATE_LIMIT_MAX=100
CORS_ORIGIN=*
ENABLE_CSRF=true

# ========================
# Configurações de Log
# ========================
LOG_LEVEL=info

# ========================
# URLs do Site
# ========================
SITE_URL=http://localhost:3000
CONTACT_EMAIL=contato@gonzagas.com
SUPPORT_EMAIL=suporte@gonzagas.com

# ========================
# Configurações de Checkpoint
# ========================
MAX_CHECKPOINTS=10

# ========================
# Configurações de Fila
# ========================
QUEUE_PROVIDER=bull
QUEUE_CONCURRENCY=5

# ========================
# Configurações de Upload
# ========================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB
